{{!-- Create Article Modal --}}

<div class="modal fade" id="newArticleModal" aria-hidden="true" aria-labelledby="registerModalLabel2" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered mw-70">
        <div class="modal-content br-1 p-3">
            <div class="modal-body">
                <div class="container">
                    <h1 class="py-2 text-center">Create New Article</h1>
                    <hr>

                    <form id="newArticleForm">


                        <div class="row">

                            <div class="col border-end">

                                <div class="form-outline mb-3">
                                    <label class="form-label">Article Title</label>
                                    <input type="text" class="form-control" name="title" placeholder="Enter the article title" required>
                                    <div class="invalid-feedback"></div>
                                </div>
                                
                                <div class="form-outline mb-3">
                                    <label class="form-label">Co-Authors</label>
                                    <input type="text" class="form-control" name="coAuthors" placeholder="Please enter the article's co-authors, if any">
                                    <div class="invalid-feedback"></div>
                                </div>
                                
                                <div class="form-outline mb-3">
                                    <label class="form-label">Tags</label>
                                    <input type="text" class="form-control" name="tags" placeholder="Please enter the article's tags separated by space">
                                    <div class="invalid-feedback"></div>
                                </div>

                            </div>

                            <div class="col border-end">

                                <div class="form-outline mb-3">
                                    <label for="imagePath" class="form-label">Image URL</label>
                                    <input type="url" class="form-control" name="imageURL" placeholder="Please enter the image URL" required>
                                    <div class="invalid-feedback"></div>
                                </div>
                                <div class="form-outline mb-3">path
                                    <label for="imageDescription" class="form-label">Image Description</label>
                                    <textarea class="form-control" name="imageDescription" placeholder="Enter the image description" required></textarea>
                                    <div class="invalid-feedback"></div>
                                </div>

                            </div>

                            <div class="col">
                                <div class="d-flex justify-content-center mb-3">
                                    <img id="newArticleImagePreview" name="imagePreview" class="img-fluid mw-70" src="https://cdn.onlinewebfonts.com/svg/img_98811.png" onerror="this.src='https://static.vecteezy.com/system/resources/previews/005/337/799/original/icon-image-not-found-free-vector.jpg';" alt="Image Preview">
                                </div>
                            </div>

                        </div>

                        <div class="form-outline mb-3">

                            <tinymce-editor
                                name="body"
                                placeholder="Type Here..."
                                required
                                row="13"
                                api-key="z122orxt65w63ihqbmvhg6ugy9lqlxa7yjq98y3ax3ro4tro"
                                menubar="false"
                                plugins="advlist autolink lists link image charmap preview anchor
                                searchreplace visualblocks code fullscreen
                                insertdatetime media table code help wordcount"
                                toolbar="undo redo | blocks | bold italic backcolor |
                                alignleft aligncenter alignright alignjustify |
                                bullist numlist outdent indent | removeformat | help"
                                content_style="body
                                {
                                font-family:Helvetica,Arial,sans-serif;
                                font-size:14px
                                }"
                                >
                            </tinymce-editor>

                            <div class="form-outline mb-3"></div>
                        </div>

                        <!-- Submit button -->
                        <div class="container d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-block mb-4 w-75">Post</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateArticleModal" aria-hidden="true" aria-labelledby="registerModalLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content br-1 p-3">
            <div class="modal-body">
                <div class="container">
                    <h2 class="my-4 text-center">Update User</h2>
                    <form id="updateArticleModal">

                        {{!-- Hidden input field --}}
                        <input type="hidden" name="_id">

                        <!-- Email input -->
                        <div class="form-outline mb-3">
                            <label>Email: </label>
                            <input type="email" name="email" required placeholder="Email Address"
                                class="form-control" />
                            <div class="invalid-feedback"></div>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-3">
                            <label> Username: </label>
                            <input type="text" name="username" required placeholder="Username" class="form-control" />
                            <div class="invalid-feedback"></div>
                        </div>

                        <!-- Fist Name input -->
                        <div class="form-outline mb-3">
                            <label> Fist Name </label>
                            <input type="text" name="firstName" required placeholder="First Name"
                                class="form-control" />
                            <div class="invalid-feedback"></div>
                        </div>

                        <!-- Last Name input -->
                        <div class="form-outline mb-3">
                            <label> Last Name </label>
                            <input type="text" name="lastName" required placeholder="Last Name" class="form-control" />
                            <div class="invalid-feedback"></div>
                        </div>

                        <hr>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4 w-100">Update</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteArticleModal" aria-hidden="true" aria-labelledby="registerModalLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content br-1 p-3">
            <div class="modal-body">
                <div class="container">
                    <h2 class="my-1 py-1 text-center">Delete Article</h2>
                    
                    <form id="deleteArticleForm">

                        <div class="container-fluid py-2">
                        {{!-- Hidden input field --}}
                        <input type="hidden" name="_id">

                        <!-- Email -->
                        <div class="my-4 row">
                            <label class="col-sm-3 col-form-label">Title</label>
                            <div class="col-sm-9">
                                <input type="text" name="title" readonly class="form-control" value="">
                            </div>
                        </div>

                        <p>You are about to delete an article. This action cannot be undone, and all associated data and information will be permanently removed from our system. Are you sure you want to proceed?</p>
                            
                        </div>

                        <hr>

                        <!-- Submit button -->
                        <div class="text-end pt-1">
                            <button type="button" class="btn btn-secondary btn-block" data-bs-target="#deleteArticleModal" data-bs-toggle="modal" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger btn-block ms-1">Delete Article</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>