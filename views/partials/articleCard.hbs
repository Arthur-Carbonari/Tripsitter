<div class="col">
    <div class="card shadow-sm h-100">

        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
            role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>{{this.title}}</title>
            <image href="{{this.imagePath}}" alt="{{this.imageDescription}}" width="100%" height="100%"
                class="img-fluid" />
        </svg>

        <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-text py-1 text-capitalize">{{this.title}}</h5>
            <div class="d-flex justify-content-between align-items-center">
                <a href="blog/{{this._id}}" class="btn btn-md btn-outline-secondary">Read More</a>
                <small class="text-muted">{{this.date}}</small>
            </div>
        </div>
    </div>
</div>